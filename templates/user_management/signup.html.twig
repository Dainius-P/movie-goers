{% extends 'base.html.twig' %}

{% block title %}Registracija{% endblock %}

{% block content %}
<div class="sign section--bg" data-bg="/img/section/section.jpg">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<div class="sign__content">
					<!-- registration form -->
					<form action="#" class="sign__form">
						<a href="{{ path('index') }}" class="sign__logo">
							<h2>MovieGoers</h2>
						</a>

						<div class="sign__group">
							<input type="text" class="sign__input" placeholder="Vartotojo Vardas">
						</div>

						<div class="sign__group">
							<input type="email" class="sign__input" placeholder="Elektroninis paštas">
						</div>

						<div class="sign__group">
							<input type="password" class="sign__input" placeholder="Slaptažodis">
						</div>

						<div class="sign__group">
							<input type="password" class="sign__input" placeholder="Slaptažodis (pakartoti)">
						</div>

						<div class="sign__group sign__group--checkbox">
							<input id="remember" name="remember" type="checkbox" checked="checked">
							<label for="remember">Sutinku su <a href="#">Privatumo Politika</a></label>
						</div>
						
						<button class="sign__btn" type="button">Registruotis</button>

						<span class="sign__text">Jau turi paskyrą? <a href="{{ path('signin') }}">Prisijungti!</a></span>
					</form>
					<!-- registration form -->
				</div>
			</div>
		</div>
	</div>
</div>

{% endblock %}
