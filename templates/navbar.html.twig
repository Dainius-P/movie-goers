<!-- header -->
<header class="header">
	<div class="header__wrap">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<div class="header__content">
						<!-- header logo -->
						<a href="{{ path('index') }}" class="header__logo">
							<h2>MovieGoers</h2>
						</a>
						<!-- end header logo -->

						<!-- header nav -->
						<ul class="header__nav">
							<!-- dropdown -->
							<!-- end dropdown -->

							<!-- dropdown -->
							<li class="header__nav-item">
								<a class="dropdown-toggle header__nav-link" href="{{ path('filmu_sarasas') }}" role="button" aria-expanded="false">Filmai</a>
							</li>
							<li class="header__nav-item">
								<a class="dropdown-toggle header__nav-link" href="{{ path('user') }}" role="button" aria-expanded="false">Paskyra</a>
							</li>
							{% if is_granted('IS_AUTHENTICATED_REMEMBERED')%}
							<li class="header__nav-item">
								<a class="dropdown-toggle header__nav-link" href="{{ path('app_logout') }}" role="button" aria-expanded="false">Atsijungti</a>
							</li>
							{% endif %}
							{% if is_granted('IS_AUTHENTICATED_FULLY') %}
								<li class="header__nav-item">
									<a href="{{ path('naujasfilmas') }}" class="header__nav-link">Pridėti filmą</a>
								</li>
								<li class="header__nav-item">
									<a href="#" class="header__nav-link">Mėgstami</a>
								</li>
								<li class="header__nav-item">
								<a class="header__nav-link" href="{{ path('editUser') }}" role="button" aria-expanded="false">Redaguoti paskyrą</a>
							</li>
							{% endif %}
							<!-- end dropdown -->
						</ul>
						<!-- end header nav -->
						{% if is_granted('IS_AUTHENTICATED_FULLY')%}
						{% else %}
						<!-- header auth -->
						<div class="header__auth">
							{% if is_granted('IS_AUTHENTICATED_FULLY') %}
								<li class="dropdown header__nav-item">
									<a class="header__sign-in" href="#" role="button" id="dropdownMenuMore" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="icon ion-ios-log-in"></i>
									<span>Vartotojas</span></a>

									<ul class="dropdown-menu header__dropdown-menu" aria-labelledby="dropdownMenuMore">
										<li><a href="#">Paskyra</a></li>
										<li><a href="{{ path('logout') }}">Atsijungti</a></li>
									</ul>
								</li>
							{% else %}
								<a href="{{ path('app_login') }}" class="header__sign-in">
									<i class="icon ion-ios-log-in"></i>
									<span>Prisijungti</span>
								</a>
							{% endif %}
						</div>
						<!-- end header auth -->
						{% endif %}

						<!-- header menu btn -->
						<button class="header__btn" type="button">
							<span></span>
							<span></span>
							<span></span>
						</button>
						<!-- end header menu btn -->
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- header search -->
	<form action="#" class="header__search">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<div class="header__search-content">
						<input type="text" placeholder="Search for a movie, TV Series that you are looking for">

						<button type="button">search</button>
					</div>
				</div>
			</div>
		</div>
	</form>
	<!-- end header search -->
</header>